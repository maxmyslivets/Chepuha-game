#:set color_shadow [0, 0, 0, .3]


<My_MDTextFieldRound>

    normal_color: color_shadow
    active_color: color_shadow


<CustomLayoutForScrollWithPlayers>:



<Home>

    scroll_for_players: scroll_for_players

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'media/AppBackground_2.jpg'

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: 0,0,0,.2
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            size_hint_y: .1

            MDIconButton:
                id: volume_btn
                pos_hint: {'center_x': .75, 'center_y': .5}
                icon: 'volume-high'

                on_release: app.off_volume()

            MDIconButton:
                pos_hint: {'right': 1, 'center_y': .5}
                icon: 'close'

                on_release: app.stop()

        BoxLayout:
            size_hint_y: .3

            Label:
                font_size: '40sp'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: 'Чепуха'
            
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 20
            
            Scroll:
                id: scroll_for_players

            MDFillRoundFlatButton:
                text: 'Добавить игрока'
                size_hint: .9, .2
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: scroll_for_players.add()
            
            MDFillRoundFlatButton:
                text: 'Старт'
                size_hint: .9, .2
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: app.press_btn()
                #on_release: root.first_game_screen()
                on_release: root.manager.current = 'NextGameScreen'
            
            BoxLayout:
                size_hint_y: .1