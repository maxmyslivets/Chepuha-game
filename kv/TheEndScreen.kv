<MyTextInput@MDTextFieldRound>
    normal_color: color_shadow
    active_color: color_shadow
            

<TheEndScreen>:

    end_label: end_label

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'media/AppBackground_2.jpg'

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: 0,0,0,.2
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            size_hint_y: .1

            MDIconButton:
                id: volume_btn
                pos_hint: {'center_x': .75, 'center_y': .5}
                icon: 'volume-high'

                on_release: app.off_volume()

            MDIconButton:
                pos_hint: {'right': 1, 'center_y': .5}
                icon: 'close'

                on_release: app.stop()

        BoxLayout:
            padding: 20,20,20,20
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                canvas.before:
                    Color:
                        rgba: 0,0,0,.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: (self.size[0]*.8, None)
                    id: end_label
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .3

            FloatLayout:
                MDFillRoundFlatButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Показать историю'
                    on_release: app.press_btn()
                    on_release: root.update_answers()
            
            FloatLayout:
                MDFillRoundFlatButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Сыграть ещё раз'
                    on_release: app.press_btn()
                    on_release: app.clear_var()
                    on_release: root.manager.current = 'Home'